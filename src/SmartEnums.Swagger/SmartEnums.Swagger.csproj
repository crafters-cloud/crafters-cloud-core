    <PackageReference Include="NSwag.Generation.AspNetCore" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SmartEnums\SmartEnums.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

